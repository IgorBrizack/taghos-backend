{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Program",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/api-server/main.go",
      "envFile": "${workspaceFolder}/.env",
      "args": []
    },
    {
      "name": "Debug with Delve (remote)",
      "type": "go",
      "request": "attach",
      "mode": "remote",
      "remotePath": "/app",
      "host": "localhost",
      "port": 2345,
      "cwd": "${workspaceFolder}",
      "apiVersion": 2,
      "trace": "verbose"
    }
  ]
}
